{
    "name": "vite-typescript-ssr-react",
    "version": "1.0.0",
    "description": "Boilerplate for a modern web stack with Reach 18",
    "repository": {
        "type": "git",
        "url": "https://github.com/Angra974/vite-typescript-ssr-react"
    },
    "author": "Thierry Parlier",
    "original author": "JonLuca DeCaro",
    "license": "MIT",
    "scripts": {
        "dev:api": "cross-env NODE_ENV=development NODE_ENGINE=api NODE_HOST=localhost NODE_PORT=7456 vite-node server.ts -w",
        "dev:server": "cross-env NODE_ENV=development  NODE_HOST=localhost NODE_PORT=7456 vite-node server.ts -w",
        "dev:client": "cross-env NODE_ENV=development NODE_HOST=localhost vite dev --config vite.config.ts",
        "build": "tsc -p tsconfig.prod.json && pnpm build:client && pnpm build:server",
        "build:client": "vite build --outDir dist/client --config vite.client.config.ts",
        "build:server": "vite build --ssr src/client/entry-server.tsx --outDir dist/server",
        "test": "jest",
        "test:watch": "jest --watch",
        "coverage": "jest --coverage",
        "serve": "pnpm build && cross-env NODE_ENV=production vite-node dist/server.js",
        "serve:local": "vite serve",
        "clean": "rimraf dist/",
        "copy-files": "copyfiles static/* dist/assets && copyfiles index.html dist && copyfiles -f dist/client/assets/* dist/assets",
        "format": "prettier --write ."
    },
    "dependencies": {
        "compression": "1.7.4",
        "express": "4.18.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router": "^6.3.0",
        "react-router-dom": "^6.3.0",
        "serve-static": "^1.15.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.3.0",
        "@types/compression": "1.7.2",
        "@types/concurrently": "6.4.0",
        "@types/eslint": "8.4.5",
        "@types/express": "^4.17.13",
        "@types/jest": "^28.1.4",
        "@types/node": "18.0.3",
        "@types/react": "^18.0.15",
        "@types/react-dom": "^18.0.6",
        "@types/react-router-dom": "^5.3.3",
        "@typescript-eslint/eslint-plugin": "^5.30.5",
        "@typescript-eslint/parser": "^5.30.5",
        "@vitejs/plugin-react": "^1.3.2",
        "autoprefixer": "^10.4.7",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "eslint": "^8.19.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^26.5",
        "eslint-plugin-n": "^15.2.4",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-react": "^7.30.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "jest": "^28.1.2",
        "postcss": "8.4.14",
        "prettier": "^2.7.1",
        "rimraf": "^3.0.2",
        "tailwindcss": "3.1.5",
        "ts-jest": "^28.0.5",
        "typescript": "4.7.4",
        "vite": "^2.9.14",
        "vite-node": "^0.18.0",
        "vite-plugin-ejs": "^1.4.4",
        "vite-plugin-node": "^1.0.0",
        "vite-plugin-restart": "^0.1.1"
    }
}
